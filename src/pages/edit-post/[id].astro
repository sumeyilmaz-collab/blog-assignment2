---
// src/pages/edit-post/[id].astro
import MainLayout from "../../layouts/MainLayout.astro";
import { supabase } from "../../lib/supabaseClient";

export const prerender = false;

let error = "";
let success = "";

const { id } = Astro.params;

const { data: sessionData } = await supabase.auth.getSession();
const session = sessionData.session;
if (!session) return Astro.redirect("/login");

const user = session.user;

const { data: post, error: postError } = await supabase
  .from("posts")
  .select("id,title,content,category,cover_image")
  .eq("id", id)
  .eq("user_id", user.id)
  .single();

if (postError || !post) {
  return Astro.redirect("/account");
}

if (Astro.request.method === "POST") {
  const formData = await Astro.request.clone().formData();
  const title = formData.get("title")?.toString().trim();
  const content = formData.get("content")?.toString().trim();
  const category = formData.get("category")?.toString().trim() || null;
  const cover_image = formData.get("cover_image")?.toString().trim() || null;

  if (!title || !content) {
    error = "Title and content are required.";
  } else {
    const { error: updateError } = await supabase
      .from("posts")
      .update({ title, content, category, cover_image })
      .eq("id", id)
      .eq("user_id", user.id);

    if (updateError) error = updateError.message;
    else success = "Post updated!";
  }
}
---

<MainLayout title="Edit Post | The Modern Journal" fullWidth={true}>
  <section class="bg-[#f5f4f0] py-16">
    <div class="max-w-4xl mx-auto px-6">

      <a href="/account" class="text-sm text-slate-600 hover:text-blue-600">‚Üê Back to Account</a>

      <div class="mt-6 bg-white border border-slate-200 rounded-2xl shadow-sm p-10">
        <h1 class="text-3xl font-extrabold text-slate-900">Edit Post</h1>
        <p class="mt-2 text-slate-600">Update your post details.</p>

        {error && (
          <div class="mt-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-red-700 text-sm">
            {error}
          </div>
        )}

        {success && (
          <div class="mt-6 rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-green-700 text-sm">
            {success}
          </div>
        )}

        <form method="POST" class="mt-8 space-y-6">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">Post Title</label>
            <input
              name="title"
              value={post.title}
              class="w-full rounded-lg border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <div class="grid gap-4 md:grid-cols-2">
            <div>
              <label class="block text-sm font-semibold text-slate-700 mb-2">Category</label>
              <input
                name="category"
                value={post.category ?? ""}
                class="w-full rounded-lg border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-slate-700 mb-2">Cover Image URL</label>
              <input
                name="cover_image"
                value={post.cover_image ?? ""}
                class="w-full rounded-lg border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">Content</label>
            <textarea
              name="content"
              rows="10"
              class="w-full rounded-lg border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
            >{post.content}</textarea>
            <p class="mt-2 text-xs text-slate-500">Markdown supported</p>
          </div>

          <div class="flex gap-3 justify-end">
            <a
              href="/account"
              class="px-6 py-3 border border-slate-300 rounded-lg font-semibold hover:bg-slate-100"
            >
              Cancel
            </a>
            <button
              type="submit"
              class="px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 shadow"
            >
              Save Changes
            </button>
          </div>
        </form>
      </div>

    </div>
  </section>
</MainLayout>
