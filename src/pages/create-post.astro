---
import MainLayout from "../layouts/MainLayout.astro";

const categories = ["Technology", "Design", "Travel", "Fashion", "Adventure"];
---

<MainLayout title="Create Post | The Sumeyye Journal" fullWidth={false}>
  <section class="py-14">
    <div class="max-w-4xl mx-auto px-6">

      <!-- Back Link -->
      <a href="/account" class="text-sm text-slate-500 hover:text-blue-600 flex items-center gap-2 mb-6">
        ‚Üê Back to Account
      </a>

      <!-- Page Title -->
      <h1 class="text-4xl font-extrabold text-slate-900">Create New Post</h1>
      <p class="mt-2 text-slate-500">
        Share your latest thoughts and ideas with the world.
      </p>

      <!-- FORM CARD -->
      <div class="mt-10 bg-white border border-slate-200 rounded-2xl shadow-sm p-10">

        <!-- Title -->
        <div>
          <label class="block text-sm font-semibold text-slate-700 mb-2">POST TITLE</label>
          <input
            type="text"
            placeholder="Enter an engaging title..."
            class="w-full border border-slate-200 rounded-lg px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600"
          />
        </div>

        <!-- Category + Image -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">

          <!-- Category -->
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">CATEGORY</label>
            <select
              class="w-full border border-slate-200 rounded-lg px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600"
            >
              {categories.map((cat) => (
                <option value={cat}>{cat}</option>
              ))}
            </select>
          </div>

          <!-- Cover Image URL -->
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">COVER IMAGE URL</label>
            <input
              type="text"
              placeholder="https://..."
              class="w-full border border-slate-200 rounded-lg px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600"
            />
          </div>
        </div>

        <!-- Content -->
        <div class="mt-8">
          <label class="block text-sm font-semibold text-slate-700 mb-2">CONTENT</label>
          <textarea
            placeholder="Tell your story here..."
            class="w-full min-h-[280px] border border-slate-200 rounded-lg px-4 py-3 text-sm resize-none focus:outline-none focus:ring-2 focus:ring-blue-600"
          ></textarea>

          <p class="mt-2 text-xs text-slate-400">Markdown supported</p>
        </div>

        <!-- Buttons -->
        <div class="flex justify-end gap-4 mt-10">
  <button
    class="shrink-0 px-7 py-3 rounded-lg border border-slate-200 text-slate-700 font-semibold hover:bg-slate-50 transition"
  >
    Save Draft
  </button>

  <button
    class="shrink-0 px-8 py-3 rounded-lg bg-blue-600 text-white font-semibold shadow-md hover:bg-blue-700 active:scale-[0.98] transition flex items-center justify-center"
  >
    Publish Post
  </button>
</div>
</div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
