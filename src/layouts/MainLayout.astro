---
export const prerender = false;

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// ✅ Netlify/production için doğru yöntem: CSS'i import et
import "../styles/global.css";

const { title = "The Modern Journal", fullWidth = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-slate-50 text-slate-900">
    <Navbar />

    <main class={fullWidth ? "" : "max-w-6xl mx-auto px-6"}>
      <slot />
    </main>

    <Footer />
  </body>
</html>
