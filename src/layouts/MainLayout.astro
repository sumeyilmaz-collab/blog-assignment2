---
export const prerender = false;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { title = "The Modern Journal", fullWidth = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Tailwind + global styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <title>{title}</title>
  </head>

  <body class="min-h-screen flex flex-col bg-[#f5f4f0]">
    <Navbar />

    <main class={fullWidth ? "" : "mx-auto w-full max-w-6xl px-6"}>
      <slot />
    </main>

    <Footer />
  </body>
</html>
